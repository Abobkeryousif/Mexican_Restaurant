@model Product
@{
    ViewBag.Title = $"{ViewBag.Operation} Menu Item"; 
}

<h1>@ViewBag.Operation Menu Item</h1>
<form asp-action="AddEdit" method="post" enctype="multipart/form-data" class="mt-4">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="CategoryId"/>
    <div class="form-group">
        <label asp-for="Name" class="mb-2"></label>
        <input asp-for="Name" class="form-control" name="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="mb-2"></label>
        <input asp-for="Description" class="form-control" name="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="mb-2"></label>
        <input asp-for="Price" class="form-control" name="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock" class="mb-2">Quantity In Stock</label>
        <input asp-for="Stock" class="form-control" name="Stock" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="imageUpload" class="mb-2">Upload Image</label>
        <input type="file" class="form-control" id="imageUpload" name="ImageFile" asp-for="ImageFile"/> 
    </div>
     <div class="row">
         <div class="col">
            @foreach(Category category in ViewBag.Categories)
            {
                <div class="form-check">
                    @{
                        bool isChecked = Model.CategoryId == category.CategoryId;
                    }
                    <input type="radio" class="form-check-input" id="@category.CategoryId" name="catId" 
                    value="@category.CategoryId" @(isChecked ? "checked" : "") /> @category.Name
                </div>
            }
        </div>
        <div class="col">
            @foreach(Ingredient ingredient in ViewBag.Ingredients)
            {
                <div class="form-check">
                    @{
                        bool isCheched = Model.ProductIngredients != null && Model.ProductIngredients.Any(i=> i.IngredientId == ingredient.IngredientId);
                    }
                    <input type="checkbox" class="form-check-input" id="@ingredient.IngredientId" name="ingredientIds" value="@ingredient.IngredientId"
                           @(isCheched ? "checked" : "") />@ingredient.Name
                </div>
            }
        </div>
     </div>
     <button type="submit" class="btn btn-success m-2">Save</button>
     <a asp-action="Index" asp-controller="product" class="btn btn-outline-dark m-2">Cancle</a>
</form>









